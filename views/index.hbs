<html>
    <header>
        <div>
            <form action="/createNote">
                <input type="submit" value="Create new Note" />
            </form>
            <form action="/?theme=white" method="post">
                <input type="submit" value="White Mode" />
            </form>
            <form action="/?theme=dark" method="post">
                <input type="submit" value="Dark Mode" />
            </form>
        </div>
        <div>
            <form action="/?sortBy=finishDate" method="post">
                <input type="submit" value="By finish Date" />
            </form>
            <form action="/?sortBy=createdDate" method="post">
                <input type="submit" value="By created Date" />
            </form>
            <form action="/?sortBy=importance" method="post">
                <input type="submit" value="By Importance" />
            </form>
            <form action="/?withFinished=set" method="post">
                <input type="submit" value="Show finished" />
            </form>
        </div>
    </header>
    <main>
        {{#each this.allNotes}}
            <div>
                <form action="/edit/{{this._id}}" method="get">
                    <input type="checkbox" id="finished" name="finished" value="finished" disabled="disabled" {{#if this.finished}} checked {{/if}}>
                    <label for="finished"> Finished</label><br>
                    <label for="title"> {{this.title}}</label>
                    <span>{{pretty_importance this.importance}}</span>
                    <span>{{this.createdDate}}</span>
                    <textarea id="text" name="text" cols="35" rows="2">{{this.description}}</textarea>
                    <input type="submit" value="Edit" />
                </form>
            </div>
        {{/each}}
    </main>
</html>